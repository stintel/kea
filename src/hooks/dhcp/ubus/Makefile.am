SUBDIRS = .

AM_CPPFLAGS  = -I$(top_builddir)/src/lib -I$(top_srcdir)/src/lib
AM_CPPFLAGS += $(BOOST_INCLUDES) $(UBUS_CPPFLAGS)
AM_CXXFLAGS  = $(KEA_CXXFLAGS)

# Ensure that the message file is included in the distribution
EXTRA_DIST = ubus_messages.mes

CLEANFILES = *.gcno *.gcda

# convenience archive

noinst_LTLIBRARIES = libubus.la

libubus_la_SOURCES  = ubus_callouts.cc
libubus_la_SOURCES += ubus.cc ubus.h
libubus_la_SOURCES += ubus_messages.cc ubus_message.h
libubus_la_SOURCES += ubus_log.cc ubus_log.h
libubus_la_SOURCES += version.cc

libubus_la_CXXFLAGS = $(AM_CXXFLAGS)
libubus_la_CPPFLAGS = $(AM_CPPFLAGS)

# install the shared object into $(libdir)/kea/hooks
lib_hooksdir = $(libdir)/kea/hooks
lib_hooks_LTLIBRARIES = libdhcp_ubus.la

libdhcp_ubus_la_SOURCES  =
libdhcp_ubus_la_LDFLAGS  = $(AM_LDFLAGS)
libdhcp_ubus_la_LDFLAGS  += -avoid-version -export-dynamic -module

libdhcp_ubus_la_LIBADD  = libubus.la
libdhcp_ubus_la_LIBADD += $(top_builddir)/src/lib/dhcpsrv/libkea-dhcpsrv.la
libdhcp_ubus_la_LIBADD += $(top_builddir)/src/lib/process/libkea-process.la
libdhcp_ubus_la_LIBADD += $(top_builddir)/src/lib/eval/libkea-eval.la
libdhcp_ubus_la_LIBADD += $(top_builddir)/src/lib/stats/libkea-stats.la
libdhcp_ubus_la_LIBADD += $(top_builddir)/src/lib/config/libkea-cfgclient.la
libdhcp_ubus_la_LIBADD += $(top_builddir)/src/lib/dhcp/libkea-dhcp++.la
libdhcp_ubus_la_LIBADD += $(top_builddir)/src/lib/hooks/libkea-hooks.la
libdhcp_ubus_la_LIBADD += $(top_builddir)/src/lib/ubus/libkea-ubus.la
libdhcp_ubus_la_LIBADD += $(top_builddir)/src/lib/cc/libkea-cc.la
libdhcp_ubus_la_LIBADD += $(top_builddir)/src/lib/asiolink/libkea-asiolink.la
libdhcp_ubus_la_LIBADD += $(top_builddir)/src/lib/log/libkea-log.la
libdhcp_ubus_la_LIBADD += $(top_builddir)/src/lib/util/libkea-util.la
libdhcp_ubus_la_LIBADD += $(top_builddir)/src/lib/exceptions/libkea-exceptions.la

# If we want to get rid of all generated messages files, we need to use
# make maintainer-clean. The proper way to introduce custom commands for
# that operation is to define maintainer-clean-local target. However,
# make maintainer-clean also removes Makefile, so running configure script
# is required.  To make it easy to rebuild messages without going through
# reconfigure, a new target messages-clean has been added.
maintainer-clean-local:
	rm -f ubus_messages.h ubus_messages.cc

# To regenerate messages files, one can do:
#
# make messages-clean
# make messages
#
# This is needed only when a .mes file is modified.
messages-clean: maintainer-clean-local

if GENERATE_MESSAGES

# Define rule to build logging source files from message file
messages: ubus_messages.h ubus_messages.cc
	@echo Message files regenerated

ubus_messages.h ubus_messages.cc: ubus_messages.mes
	$(top_builddir)/src/lib/log/compiler/kea-msg-compiler $(top_srcdir)/src/hooks/dhcp/ubus/ubus_messages.mes

else

messages ubus_messages.h ubus_messages.cc:
	@echo Messages generation disabled. Configure with --enable-generate-messages to enable it.

endif

